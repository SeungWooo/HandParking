<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatToManager">

    <TextView
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="관리자와의 채팅입니다"
        android:textSize="16dp"
        android:layout_above="@+id/chatToManager_reclclerview"
        android:layout_alignParentTop="true"
        android:background="#cfdfff"
        android:gravity="center"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatToManager_reclclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chatToManager_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"

        android:background="#cfdfff"></android.support.v7.widget.RecyclerView>



    <EditText
        android:id="@+id/chatToManager_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/chatToManager_button"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>

    <ImageButton
        android:id="@+id/chatToManager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/gobutton2"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>