<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageActivity"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"

        >

        <ImageButton
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_border2"
            android:src="@drawable/privacysto"
            android:gravity="center"
            android:text="개인정보취급방침" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        >
        <ImageButton
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="위치기반서비스 이용약관"
            android:src="@drawable/locationsto"
            android:background="@drawable/layout_border2"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/Withdrawalout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@color/com_facebook_button_login_silver_background_color_pressed"
        android:src="@drawable/withdrawal" />

</LinearLayout>