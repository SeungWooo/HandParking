<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/page6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/point1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="주차장 이미지"
                android:textColor="#000000"
                android:fontFamily="@font/binggrae"
                android:textSize="20dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="169dp"
            android:background="@drawable/nophoto4"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공영주차장은 이미지를 제공하지 않습니다."
            android:layout_marginTop="12dp"
            android:textSize="10dp"
            android:fontFamily="@font/binggrae"
            android:textColor="#000000"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/point1" />

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="주차장이름"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/binggrae"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/point2" />

            <TextView
                android:id="@+id/tv_Address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/binggrae"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/point3" />

            <TextView
                android:id="@+id/tv_Tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="번호"
                android:textColor="#0040FF"
                android:textSize="20dp"
                android:fontFamily="@font/binggrae"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border1"
                android:gravity="center_horizontal"
                android:text="주차면"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border3"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/money"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/binggrae"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="요금 정보" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="기본요금"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_Rate"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="추가요금"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_AddRate"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="일 최대 요금"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_DayMaximum"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="월 정기권"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_FulltimeMonth"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/clock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/binggrae"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="운영 정보" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="평일"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_WeekDay"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />
                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="주말"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_WeekEnd"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />
                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="공휴일"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tv_Holiday"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/binggrae"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">


            <ImageButton
                android:id="@+id/info_btn_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/navibtn"
                android:layout_weight="1"
                />



            <ImageButton
                android:id="@+id/info_btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/chatbtn"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>