<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:tag="bottom_sheet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/page5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plogo"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/dialog_ParkingName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:gravity="left|top"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/binggrae"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/binggrae"
                    android:text="대한민국 성남시 성남동 모란역"
                    android:inputType="textMultiLine"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/money2"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/dialog_Rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae"
                    android:text="시간당 9000 원"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="3dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clock2"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/dialog_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae"
                    android:text="07:00 ~ 19:00"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bottom_sheet_navi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/nevigation"
            android:layout_gravity="left"/>

        <ImageButton
            android:id="@+id/bottom_sheet_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/callbutton"
            android:layout_gravity="left"
            />

        <ImageButton
            android:id="@+id/bottom_sheet_chat_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/chatbutton"
            android:layout_gravity="left"
            />
    </LinearLayout>




</LinearLayout>